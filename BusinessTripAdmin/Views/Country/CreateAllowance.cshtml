@using BusinessTripAdmin.Core.ViewModels
@using BusinessTripAdmin.Infrastructure.Data.Enums
@model CreateAllowance
@{
    ViewData["Title"] = "Create Allowance";
}

<div class="row">
    <div class="col-4">
        <div class="card card-secondary">
            <div class="card-header">
            </div>

            <form id="create" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="DailyAllowance" class="form-label">Daily Allowance</label>
                        <input asp-for="DailyAllowance" class="form-control" aria-required="true" placeholder="Enter Daily Allowance" />
                        <span asp-validation-for="DailyAllowance" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AccomodationAllowance" class="form-label">Accomodation Allowance</label>
                        <input asp-for="AccomodationAllowance" class="form-control" aria-required="true" placeholder="Enter Accomodation Allowance" />
                        <span asp-validation-for="AccomodationAllowance" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ValidFrom" class="form-label">Valid From Date</label>
                        <input asp-for="ValidFrom" class="form-control" aria-required="true" />
                        <span asp-validation-for="ValidFrom" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ValidTo" class="form-label">Valid To</label>
                        <input asp-for="ValidTo" class="form-control" aria-required="true"/>
                        <span asp-validation-for="ValidTo" class="text-danger"></span>
                    </div>

                <div class="card-footer">
                    <button type="submit" asp-controller="Country" class="btn btn-block btn-light btn-sm">Create Allowance</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}