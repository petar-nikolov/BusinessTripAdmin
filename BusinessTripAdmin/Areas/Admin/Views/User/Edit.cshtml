@using BusinessTripAdmin.Core.ViewModels
@model UserEdit
@{
    ViewData["Title"] = "Edit User";
}

<div class="row">
    <div class="col-4">
        <div class="card card-secondary">
            <div class="card-header">
                @*<h3 class="card-title">Edit User</h3>*@
            </div>


            <form id="edit" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <input type="hidden" name="Id" value="@Model.Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" aria-required="true" placeholder="Enter new first name"/>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" aria-required="true" placeholder="Enter new last name"/>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" asp-controller="user" class="btn btn-block btn-light btn-sm">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}