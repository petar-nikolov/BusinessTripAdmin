@using BusinessTripAdmin.Core.ViewModels
@model UserEdit

<div class="row">
    <div class="col-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Quick Example</h3>
            </div>


            <form>
                <div class="card-body">
                    <div class="form-group">
                        <input type="hidden" name="Id" value="@Model.Id" />
                    </div>
                    <div class="form-group">
                        <label for="firstName">Enter new first name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="Enter new first name">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Enter new last name</label>
                        <input type="text" class="form-control" id="lastName" placeholder="Enter new last name">
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>